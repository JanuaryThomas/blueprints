{{$app := .AppName | kebabcase}}
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: {{$app}}
  type: core.Directory
  children:
    - name: K8S
      type: core.Directory
      children:
      - name: {{$app}}-namespace
        type: udm.Application
        lastVersion: '1.0.0'
        children:
        - name: '1.0.0'
          type: udm.DeploymentPackage
          deployables:
          - name: {{.Namespace}}
            type: k8s.NamespaceSpec
            namespaceName: '{{.Namespace}}'
      - name: {{$app}}-k8s-app
        type: udm.Application
        lastVersion: '1.0.0'
        children:
        - name: 1.0.0
          type: udm.DeploymentPackage
          deployables:
          - name: {{$app}}-service
            type: k8s.ResourcesFile
            file: !file ../kubernetes/app.yaml