{{$clusterName := .ClusterName | kebabcase}}
# Provision GCP GKE cluster
apiVersion: xl-deploy/v1
kind: Infrastructure
spec:
- name: localhost
  type: overthere.LocalHost
  os: UNIX
  children:
  - name: terraform-client
    type: terraform.TerraformClient
    path: '/usr/local/bin' # for local installation
    workingDirectory: '/tmp/{{$clusterName}}' # for local installation

---
apiVersion: xl-deploy/v1
kind: Environments
spec:
  - name: gcp-terraform
    type: udm.Environment
    members:
    - Infrastructure/localhost/terraform-client
